# Use the full Debian Buster image for Node (not the slim version)
FROM node:16-buster

# Install Puppeteer's dependencies (including libnss3)
RUN apt-get update && apt-get install -y \
  ca-certificates \
  fonts-liberation \
  libappindicator3-1 \
  libasound2 \
  libatk-bridge2.0-0 \
  libatk1.0-0 \
  libcups2 \
  libdbus-1-3 \
  libexpat1 \
  libfontconfig1 \
  libgbm1 \
  libgtk-3-0 \
  libnspr4 \
  libnss3 \
  libx11-xcb1 \
  libxcomposite1 \
  libxdamage1 \
  libxfixes3 \
  libxi6 \
  libxrandr2 \
  libxrender1 \
  libxss1 \
  libxtst6 \
  lsb-release \
  xdg-utils \
  wget \
  && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the appâ€™s source code
COPY . .

# Build the CRA app (this will run your postbuild script, including react-snap)
RUN npm run build

# Install a lightweight static file server
RUN npm install -g serve

# Serve the build folder
CMD ["serve", "-s", "build"]
